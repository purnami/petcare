<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgbutton3"
        android:paddingBottom="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:text="Id" />
        <TextView
            android:id="@+id/namereksend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:text="Account" />
        <TextView
            android:id="@+id/reksend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:text="Account Number" />
        <TextView
            android:id="@+id/totalpricessend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:text="Total Prices" />
        <TextView
            android:id="@+id/statusverif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:text="Total Prices" />
        <TextView
            android:id="@+id/statussend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:text="Total Prices" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">
            <Button
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Check Payment"
                android:background="#3B68DA"
                android:textColor="#fff"
                android:layout_marginTop="19dp"
                android:paddingHorizontal="10dp"
                android:textAllCaps="false"></Button>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Verification"
                    android:textAlignment="center"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:id="@+id/yesverif"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:text="Yes"
                        android:textColor="#fff"
                        android:background="#4CAF50"
                        android:layout_marginRight="10dp"
                        android:textAllCaps="false"></Button>
                    <Button
                        android:id="@+id/noverif"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:textColor="#fff"
                        android:text="No"
                        android:background="#CA0505"
                        android:textAllCaps="false"></Button>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Send Order"
                    android:textAlignment="center"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:id="@+id/yessend"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:text="Yes"
                        android:textColor="#fff"
                        android:layout_marginRight="10dp"
                        android:background="#4CAF50"
                        android:textAllCaps="false"></Button>
                    <Button
                        android:id="@+id/nosend"
                        android:layout_width="48dp"
                        android:layout_height="40dp"
                        android:text="No"
                        android:textColor="#fff"
                        android:background="#CA0505"
                        android:textAllCaps="false"></Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>