<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuyActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/buy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Lengkap"
                    android:layout_marginBottom="5dp"
                    ></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/buy_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Lengkap"
                    android:layout_marginBottom="5dp"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/buy_telp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Telepon"
                    android:inputType="number"
                    android:layout_marginBottom="5dp"></EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Jasa Pengiriman"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="4dp"
                android:textColor="#EB8C8A8F"
                android:textSize="13dp"></TextView>
            <Spinner
                android:id="@+id/buy_send"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp">
            </Spinner>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="#97464547"
                android:layout_marginBottom="10dp"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Durasi Pengiriman"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="4dp"
                android:textColor="#EB8C8A8F"
                android:textSize="13dp"></TextView>
            <Spinner
                android:id="@+id/buy_duration"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"></Spinner>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="#97464547"
                android:layout_marginBottom="10dp"
                ></View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Metode Pembayaran"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="4dp"
                android:textColor="#EB8C8A8F"
                android:textSize="13dp"></TextView>
            <Spinner
                android:id="@+id/buy_bank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"></Spinner>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:background="#97464547"
                android:layout_marginBottom="10dp"
                ></View>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/buy_rek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginBottom="5dp"
                    android:hint="Nomor Rekening"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/buy_nameRek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Pemilik Rekening"
                    android:layout_marginBottom="5dp"></EditText>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="#F44336"
            android:text="Pesan"
            android:textAllCaps="false"
            android:textColor="#FCFBFD"
            android:textSize="15dp"></Button>
    </LinearLayout>
</RelativeLayout>