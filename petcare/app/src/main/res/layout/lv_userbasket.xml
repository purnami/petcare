<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>
        <ImageView
            android:id="@+id/image_basket"
            android:layout_width="100dp"
            android:layout_height="100dp"></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/name_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#040404"
                android:text="product"></TextView>
            <TextView
                android:id="@+id/prices_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:text="prices"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:background="#FFFFFF"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"></ImageButton>
                <ImageButton
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_remove_circle_black_24dp"></ImageButton>
                <TextView
                    android:id="@+id/totProduct"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="#020202"
                    android:textSize="22dp"
                    android:layout_marginTop="6dp"
                    android:text="1"
                    android:textAlignment="center"
                    ></TextView>
                <ImageButton
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_add_circle_black_24dp"></ImageButton>
            </LinearLayout>
            <TextView
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Total :"
                android:textColor="#081FE6"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>