<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailProductActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/img_detail"></ImageView>
    <TextView
        android:layout_below="@+id/img_detail"
        android:id="@+id/name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="product"
        android:textSize="22dp"
        android:textColor="#020202"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"></TextView>
    <TextView
        android:layout_below="@+id/name_detail"
        android:id="@+id/price_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="product"
        android:textSize="25dp"
        android:textColor="#F44336"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        >
        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="#F44336"
            android:background="@drawable/bgbutton"
            android:layout_marginLeft="20dp"
            ></Button>
        <Button
            android:id="@+id/btn_addBasket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah ke Keranjang"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="#FEFEFF"
            android:background="#F44336"
            android:paddingHorizontal="15dp"
            android:layout_marginLeft="55dp"></Button>
    </LinearLayout>
</RelativeLayout>